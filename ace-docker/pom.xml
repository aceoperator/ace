			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.0.2</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>target/compose</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<version>${docker.version}</version>
				<executions>
					<execution>
						<id>build-ace-db</id>
						<phase>package</phase>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<imageName>aceoperator/db</imageName>
							<imageTags>
								<imageTag>${project.version}</imageTag>
							</imageTags>
							<dockerDirectory>src/main/images/ace-db</dockerDirectory>
							<resources>
								<resource>
									<targetPath>work</targetPath>
									<directory>../ace-assembly/target/ace-${project.version}/ace-${project.version}/.ace/sql</directory>
									<include>**/*.sql</include>
								</resource>
							</resources>
						</configuration>
					</execution>

					<execution>
						<id>build-ace-mail</id>
						<phase>package</phase>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<imageName>aceoperator/mail</imageName>
							<imageTags>
								<imageTag>${project.version}</imageTag>
							</imageTags>
							<dockerDirectory>src/main/images/ace-mail</dockerDirectory>
						</configuration>
					</execution>

					<execution>
						<id>build-ace-app</id>
						<phase>package</phase>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<imageName>aceoperator/app</imageName>
							<imageTags>
								<imageTag>${project.version}</imageTag>
							</imageTags>
							<dockerDirectory>src/main/images/ace-app</dockerDirectory>
							<buildArgs>
								<ACE_VERSION>ace-${project.version}</ACE_VERSION>
							</buildArgs>
							<resources>
								<resource>
									<targetPath>work</targetPath>
									<directory>../ace-assembly/target/ace-${project.version}</directory>
								</resource>
							</resources>
						</configuration>
					</execution>

					<execution>
						<id>build-ace-frontend</id>
						<phase>package</phase>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<imageName>aceoperator/frontend</imageName>
							<imageTags>
								<imageTag>${project.version}</imageTag>
							</imageTags>
							<dockerDirectory>src/main/images/ace-frontend</dockerDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
